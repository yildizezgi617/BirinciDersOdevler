package mukemmelsayi;

public class MukemmelSayiDemo {
	public static void main(String[] args) {
		int sayi = 6;
		int sayilar = 0;
		for (int i = 2; i < sayi; i++) {
			int kalan = sayi % i;
			if (kalan == 0) {
				int bolum = sayi / i;

				sayilar = bolum + sayilar;

			}

		}

		if (sayilar == sayi) {

			System.out.println("mukemmel sayi");
		} 
	}

}
